---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../posts/*.mdx");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout pageTitle="McLovin">
  <div>
    <h1 class="font-3xl font-bold text-cyan-800 my-2">Tags</h1>
    <div class="flex flex-wrap space-x-1">
      {
        tags.map((tag) => (
          <div class="p-1 rounded cursor-pointer bg-purple-300 border-b-4 border-l-2 border-purple-400">
            <a href={`/tags/${tag}`} class="h-full w-full">
              <p class="text-xs p-1 font-semibold text-purple-900">{tag}</p>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</BaseLayout>
