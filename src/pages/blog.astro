---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/common/BlogPost.astro";
import TagBadge from "../components/common/TagBadge.astro";
import Tag from "./tags/[tag].astro";
const allPosts = await Astro.glob("../pages/posts/*.mdx");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout pageTitle="Blog">
  <h2 class="font-bold text-center text-cyan-800 text-2xl">Posts</h2>
  <div class="flex my-2 justify-center flex-wrap space-x-1">
    {tags.map((tag) => <TagBadge tag={tag} />)}
  </div>
  <ul class="flex flex-wrap">
    {
      allPosts.map((post) => (
        <BlogPost url={post.url} title={post.frontmatter.title} />
      ))
    }
  </ul>
</BaseLayout>
