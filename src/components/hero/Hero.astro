---
import { Image } from "astro:assets";
import hroImg from "../../assets/faswim.jpeg";
import logo from "../../assets/faswhito.png";
import Button from "../common/Button.astro";
import Validation from "./Validation.astro";
---

<div class="bg-[#FFFAEB] flex flex-col items-center w-full">
  <div class="max-w-2xl pt-16 sm:pt-24">
    <div class="mx-auto w-4/5 sm:w-2/3 px-4">
      <Image src={logo} alt="faswim logo" />
    </div>
    <div class="space-y-2 my-4 sm:my-8">
      <div class="space-y-2 max-w-lg mx-auto" id="home">
        <h1 class="text-2xl text-primary-800 sm:text-4xl font-bold text-center">
          Elevate your club's swim skills
        </h1>
        <p
          class="text-neutral-700 px-2 md:px-0 font-medium text-md sm:text-xl text-center"
        >
          Swim Clinics coached by world class swimmers that transform your
          performance
        </p>
      </div>
      <div class="flex justify-center">
        <Button>Get started</Button>
      </div>
    </div>
    <div class="px-4 sm:px-0">
      <Image
        class="rounded-xl border-4 border-cyan-900 shadow"
        src={hroImg}
        alt="Freya swimming freestyle in a race"
      />
    </div>
    <div class="py-4 sm:py-6">
      <Validation />
    </div>
  </div>
</div>
