---
interface Props {
  tag: string;
}

const { tag } = Astro.props;
---

<div
  class="p-1 rounded cursor-pointer bg-purple-300 border-b-4 border-l-2 border-purple-400"
>
  <a href={`/tags/${tag}`} class="h-full w-full">
    <p class="text-xs py-0 px-0 font-semibold text-purple-900">{tag}</p>
  </a>
</div>
