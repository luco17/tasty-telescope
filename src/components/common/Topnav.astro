---
interface Link {
  href: string;
  text: string;
}

const links: Link[] = [
  {
    href: "/",
    text: "Home",
  },
  {
    href: "/about/",
    text: "About",
  },
  {
    href: "/blog/",
    text: "Blog",
  },
];
---

<nav class="px-4 py-1 rounded-md text-sky-100 shadow-lg bg-cyan-900">
  <div class="space-x-2">
    {
      links.map((link) => (
        <a
          class="text-sm hover:text-sky-300 transition-colors duration-200 ease-in-out"
          href={link.href}
        >
          {link.text}
        </a>
      ))
    }
  </div>
</nav>
