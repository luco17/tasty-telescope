---
interface Props {
  profilePic: ImageMetadata;
  name: string;
  summary: string;
  wikilink: string;
}

import { Image } from "astro:assets";
const { profilePic } = Astro.props;
const { name } = Astro.props;
const { summary } = Astro.props;
const { wikilink } = Astro.props;
---

<div class="p-2 place-self-center">
  <div class="w-64 h-64 sm:w-72 sm:h-72 mx-auto">
    <Image class="rounded-full border-[1px]" src={profilePic} alt={name} />
  </div>
  <div class="max-w-sm">
    <h3 class="text-2xl text-center text-accent-yellow-50 font-bold">{name}</h3>
    <p class="text-neutral-50 text-center font-medium">{summary}</p>
  </div>
  <div class="mt-2">
    <a href={wikilink} class=""
      ><p class="text-center underline text-red-50 font-medium">
        More about {name.split(" ")[0]}
      </p>
    </a>
  </div>
</div>
