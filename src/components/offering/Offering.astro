---
import Button from "../common/Button.astro";
import CheckItem from "./CheckItem.astro";
---

<div class="py-8 sm:py-16">
  <h2 class="text-primary-900 text-center text-2xl sm:text-4xl font-bold">
    Packages
  </h2>
  <div
    class="grid grid-cols-1 my-8 md:grid-cols-2 gap-2 mx-auto max-w-3xl items-start"
  >
    <div class="rounded-lg shadow bg-blue-50 p-4">
      <h4 class="text-2xl text-accent-blue-900 font-bold">
        The complete package
      </h4>
      <div class="bg-accent-blue-500 rounded px-1 py-[2px] inline-block">
        <p class="text-xs text-yellow-50">Full or half-day available</p>
      </div>
      <ul class="list-inside pl-2 space-y-2 my-4">
        <CheckItem item="Full day clinic" />
        <CheckItem item="2x 90min swim sessions" />
        <CheckItem item="60min land training clinic" />
        <CheckItem item="30min Q&A" />
        <CheckItem item="30min Talk" />
      </ul>
      <button
        class="px-4 py-3 mt-4 rounded-lg bg-primary-500 hover:bg-primary-400 w-full text-white font-semibold text-lg"
        >Book my swim clinic</button
      >
      <p class="text-xs my-2 text-neutral-500 text-center">
        Minimum 20 participants for full day
      </p>
    </div>
    <div class="rounded-lg shadow-sm bg-neutral-50 p-4 grow-0">
      <h4 class="text-2xl text-accent-blue-900 font-bold">Essentials</h4>
      <ul class="list-inside pl-2 space-y-2 my-4">
        <CheckItem item="120min swim with demos" />
        <CheckItem item="30min Q&A" />
      </ul>
      <button
        class="px-4 py-3 mt-4 rounded-lg bg-neutral-800 hover:bg-neutral-900 w-full text-white font-semibold text-lg"
        >Book the essentials</button
      >
    </div>
  </div>
</div>
