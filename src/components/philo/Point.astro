---
const { headline } = Astro.props;
const { body } = Astro.props;
---

<div class="">
  <div
    class="p-2 rounded-full h-12 w-12 flex items-center justify-center bg-primary-50"
  >
    <slot />
  </div>
  <div class="px-2">
    <h3 class="font-semibold text-xl">{headline}</h3>
    <p class="break-words">{body}</p>
  </div>
</div>
