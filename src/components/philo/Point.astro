---
const { headline } = Astro.props;
const { body } = Astro.props;
---

<div class="space-y-3">
  <div
    class="p-2 rounded-full h-16 w-16 flex items-center justify-center bg-primary-50"
  >
    <slot />
  </div>
  <div class="px-2">
    <h3 class="font-semibold text-xl text-primary-900">{headline}</h3>
    <p class="break-words text-neutral-900">{body}</p>
  </div>
</div>
